{
  "name": "linkvault",
  "type": "module",
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:backend": "bun --cwd backend dev",
    "dev:frontend": "bun --cwd frontend dev",
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\""
  }
}